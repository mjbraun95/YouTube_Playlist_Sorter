{
    "manifest_version": 3,
    "name": "YouTube Playlist Sorter",
    "version": "1.0",
    "description": "Sorts YouTube playlists alphabetically when saving videos.",
    "permissions": [
        "activeTab"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "48": "icon.png"
    }
  }